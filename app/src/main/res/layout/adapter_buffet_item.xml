<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/group_card"
    android:layout_width="@dimen/buffet_item_width"
    android:layout_height="@dimen/buffet_item_group_height">
    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/buffet_item_width"
        android:layout_height="@dimen/buffet_item_height"
        android:scaleType="fitXY"
        android:src="@drawable/ic_item_def"/>
    <TextView
        android:id="@+id/tv_number"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:background="@drawable/shape_point_red"
        android:layout_alignRight="@id/iv_head"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:text="15"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/tv_limit"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/width_30"
        android:gravity="center"
        android:background="@drawable/shape_round_limit"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:visibility="gone"
        android:text="限量0"
        android:padding="5dp"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/iv_head"
        android:layout_alignRight="@id/iv_head"
        android:layout_marginRight="5dp"
        android:textColor="@color/main_red"
        android:textSize="@dimen/text_18"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_price"
        android:layout_toLeftOf="@id/tv_price"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textColor="@color/text_normal"
        android:textSize="@dimen/text_18"/>
    <TextView
        android:id="@+id/tv_name_eng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/text_sub"
        android:textSize="@dimen/text_16"/>
    <com.jing.demo.screeninfor.PepperView
        android:id="@+id/pepperView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/iv_head"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_price"
        app:pepperNumMax="5"
        app:pepperSrc="@drawable/ic_pepper"
        app:itemWidth="@dimen/text_16"/>
    <TextView
        android:id="@+id/tv_sold_out"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#99000000"
        android:visibility="gone"
        android:text="卖完啦~"
        android:textSize="@dimen/text_20"
        android:textColor="@color/white" />
</RelativeLayout>